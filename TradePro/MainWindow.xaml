<Window x:Class="TradePro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradePro"
        mc:Ignorable="d"
        Title="TradePro" Background="#222222"
        WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize">

    <Grid Name="MainGrid">
        <Border Width="380" Padding="24" CornerRadius="12" Background="#1E1E1E" BorderBrush="#FF8A00" BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="TradePro" Foreground="White" FontSize="26" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 0 0 6"/>
                <TextBlock Text="Inicia sesión" Foreground="#DADADA" FontSize="12" HorizontalAlignment="Center" Margin="0 0 0 18"/>

                <StackPanel Margin="0 0 0 6">
                    <TextBlock Text="Usuario" Foreground="White" FontSize="12" Margin="4 0 0 6"/>
                    <TextBox x:Name="UsernameTextBox" Height="36" Background="#222222" Foreground="White" BorderBrush="#FF8A00" BorderThickness="0,0,0,1" Padding="6" />
                </StackPanel>

                <StackPanel Margin="0 6 0 6">
                    <TextBlock Text="Contraseña" Foreground="White" FontSize="12" Margin="4 0 0 6"/>
                    <PasswordBox x:Name="PasswordBoxControl" Height="36" Background="#222222" Foreground="White" BorderBrush="#FF8A00" BorderThickness="0,0,0,1" Padding="6" />
                </StackPanel>

                <Button x:Name="LoginButton" Content="Entrar" Height="44" Background="#FF8A00" Foreground="White" BorderBrush="#FF8A00" Margin="0 12 0 0" Click="LoginButton_Click"/>

                <TextBlock x:Name="ErrorTextBlock" Foreground="#FF6A6A" Visibility="Collapsed" FontSize="12" Margin="0 8 0 0" HorizontalAlignment="Center" TextWrapping="Wrap"/>

                <TextBlock Text="" Height="8"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
