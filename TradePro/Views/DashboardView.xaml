<UserControl x:Class="TradePro.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:TradePro.Views">
    <ScrollViewer Padding="28" VerticalScrollBarVisibility="Auto">
        <StackPanel Orientation="Vertical" Margin="0">
            <!-- Header: welcome text inside dashboard (optional) -->
            <StackPanel Margin="0,0,0,12">
                <TextBlock x:Name="WelcomeText" Text="Bienvenido" Foreground="White" FontSize="22" FontWeight="SemiBold" />
                <TextBlock Text="Resumen de cuenta y mercados en tiempo real" Foreground="#BDBDBD" Margin="0,6,0,0" />
            </StackPanel>

            <!-- Header stat cards -->
            <UniformGrid Columns="4" Rows="1" Margin="0,6,0,6" HorizontalAlignment="Stretch">
                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Total Equity" Foreground="#BDBDBD" FontSize="13" />
                        <TextBlock x:Name="TotalEquityText" Text="$0.00" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>

                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Available" Foreground="#BDBDBD" FontSize="13" />
                        <TextBlock x:Name="AvailableText" Text="$0.00" Foreground="White" FontSize="20" FontWeight="Bold" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>

                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Unrealized P&amp;L" Foreground="#BDBDBD" FontSize="13" />
                        <TextBlock x:Name="UnrealizedText" Text="$0.00" Foreground="#2ECC71" FontSize="20" FontWeight="Bold" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>

                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Realized P&amp;L" Foreground="#BDBDBD" FontSize="13" />
                        <TextBlock x:Name="RealizedText" Text="$0.00" Foreground="#2ECC71" FontSize="20" FontWeight="Bold" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
            </UniformGrid>

            <!-- Markets header -->
            <DockPanel Margin="0,6,0,0">
                <TextBlock Text="Markets" Foreground="White" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Left" />
                <TextBlock Text="Trade ?" Foreground="#BDBDBD" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="0,0,6,0" />
            </DockPanel>

            <!-- Markets cards -->
            <ItemsControl x:Name="MarketsItemsControl">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="260" ItemHeight="110" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>

            <!-- Open Positions -->
            <DockPanel Margin="0,12,0,0">
                <TextBlock Text="Open Positions" Foreground="White" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Left" />
            </DockPanel>

            <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="0,6,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock x:Name="PrimaryPositionSymbol" Text="" Foreground="White" FontWeight="Bold" FontSize="14" />
                        <Border x:Name="PrimaryPositionBadge" Background="#2ECC71" CornerRadius="6" Padding="6" Margin="12,0,0,0" VerticalAlignment="Center" Visibility="Collapsed">
                            <TextBlock x:Name="PrimaryPositionBadgeText" Text="" Foreground="#08120B" FontSize="12" FontWeight="SemiBold" />
                        </Border>
                    </StackPanel>

                    <TextBlock x:Name="PrimaryPositionValue" Text="" Foreground="#BDBDBD" Grid.Column="1" VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!-- Recent Trades -->
            <TextBlock Text="Recent Trades" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,0" />

            <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="0,6,0,24">
                <StackPanel>
                    <StackPanel x:Name="RecentTradesStack" />
                </StackPanel>
            </Border>

            <!-- Layout bottom: two columns for positions list and assets -->
            <Grid Margin="0,6,0,60">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!-- Left column: Positions list and Recent trades -->
                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <StackPanel x:Name="PositionsStack" />
                </StackPanel>

                <!-- Right column: Assets list -->
                <Border Grid.Column="1" Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="12" Margin="12,0,0,0">
                    <StackPanel>
                        <TextBlock Text="Assets" Foreground="#BDBDBD" FontSize="13" />
                        <ListBox x:Name="AssetsListBox" Background="Transparent" BorderThickness="0" Foreground="White" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>