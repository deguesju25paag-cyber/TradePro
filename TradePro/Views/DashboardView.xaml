<UserControl x:Class="TradePro.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:TradePro.Views">
    <Grid Background="#0E0F10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="28" Grid.Row="0">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock x:Name="WelcomeText" Text="Bienvenido" Foreground="White" FontSize="22" FontWeight="SemiBold" />
                    <TextBlock x:Name="DebugInfoText" Text="" Foreground="#AAAAAA" FontSize="12" Margin="0,4,0,0" />
                </StackPanel>

                <StackPanel DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <TextBlock Text="Saldo" Foreground="#BDBDBD" FontSize="12" HorizontalAlignment="Right" />
                    <TextBlock x:Name="UserBalanceText" Text="$0.00" Foreground="White" FontSize="20" FontWeight="Bold" HorizontalAlignment="Right" />
                </StackPanel>
            </DockPanel>

            <TextBlock Text="Resumen de cuenta y mercados en tiempo real" Foreground="#BDBDBD" Margin="0,6,0,0" />

            <UniformGrid Columns="4" Rows="1" Margin="0,12,0,0">
                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Total Equity" Foreground="#BDBDBD" FontSize="12" />
                        <TextBlock x:Name="TotalEquityText" Text="$0.00" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Available" Foreground="#BDBDBD" FontSize="12" />
                        <TextBlock x:Name="AvailableText" Text="$0.00" Foreground="White" FontSize="18" FontWeight="Bold" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Unrealized P&amp;L" Foreground="#BDBDBD" FontSize="12" />
                        <TextBlock x:Name="UnrealizedText" Text="$0.00" Foreground="#2ECC71" FontSize="18" FontWeight="Bold" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="18" Margin="6">
                    <StackPanel>
                        <TextBlock Text="Realized P&amp;L" Foreground="#BDBDBD" FontSize="12" />
                        <TextBlock x:Name="RealizedText" Text="$0.00" Foreground="#2ECC71" FontSize="18" FontWeight="Bold" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>
            </UniformGrid>
        </StackPanel>

        <Grid Grid.Row="1" Margin="28">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Mercados" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,12" />
                <Grid>
                    <ItemsControl x:Name="MarketsItemsControl">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>

                    <!-- Fallback when no markets -->
                    <TextBlock Text="No hay mercados disponibles" Foreground="#AAAAAA" HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding ElementName=MarketsItemsControl, Path=Items.Count}" Value="0">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <TextBlock Text="Posiciones abiertas" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,8" />
                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="8" Padding="12">
                    <Grid>
                        <StackPanel x:Name="PositionsStack" />

                        <TextBlock Text="No hay posiciones" Foreground="#AAAAAA" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=PositionsStack, Path=Children.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>

                <TextBlock Text="Operaciones recientes" Foreground="White" FontSize="16" FontWeight="SemiBold" Margin="0,12,0,8" />
                <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="8" Padding="12">
                    <Grid>
                        <StackPanel x:Name="RecentTradesStack" />

                        <TextBlock Text="No hay operaciones" Foreground="#AAAAAA" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=RecentTradesStack, Path=Children.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>
                </Border>
            </StackPanel>

            <Border Grid.Column="1" Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="12" Margin="12,0,0,0">
                <StackPanel>
                    <TextBlock Text="Activos" Foreground="#BDBDBD" FontSize="13" />
                    <Grid>
                        <ListBox x:Name="AssetsListBox" Background="Transparent" BorderThickness="0" Foreground="White" Margin="0,8,0,0" />

                        <TextBlock Text="No hay activos" Foreground="#AAAAAA" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding ElementName=AssetsListBox, Path=Items.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Visible" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <Separator Margin="0,12,0,12" />

                    <TextBlock Text="Resumen rapido" Foreground="#BDBDBD" FontSize="13" />
                    <StackPanel Margin="0,8,0,0">
                        <TextBlock x:Name="SummaryPositionsText" Text="Posiciones: 0" Foreground="#BDBDBD" />
                        <TextBlock x:Name="SummaryTradesText" Text="Operaciones: 0" Foreground="#BDBDBD" />
                        <TextBlock x:Name="SummaryAvailableText" Text="Saldo disponible: $0.00" Foreground="#BDBDBD" />
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>