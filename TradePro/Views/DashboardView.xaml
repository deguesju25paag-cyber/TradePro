<UserControl x:Class="TradePro.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:views="clr-namespace:TradePro.Views">
    <Grid Background="#0E0F10" Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" /> <!-- Welcome -->
            <RowDefinition Height="Auto" /> <!-- Balance + Assets -->
            <RowDefinition Height="*" />    <!-- Positions -->
        </Grid.RowDefinitions>

        <!-- 1) Welcome -->
        <Border Grid.Row="0" Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="16" Margin="0,0,0,12">
            <StackPanel Orientation="Vertical">
                <TextBlock x:Name="WelcomeText" Text="Bienvenido" Foreground="White" FontSize="22" FontWeight="SemiBold" />
                <TextBlock Text="Panel de control" Foreground="#BDBDBD" FontSize="12" Margin="0,6,0,0" />
                <TextBlock x:Name="DashboardStatusText" Text="" Foreground="#FF7A00" FontSize="12" Margin="0,6,0,0" Visibility="Collapsed" />
            </StackPanel>
        </Border>

        <!-- 2) Balance + Assets -->
        <Grid Grid.Row="1" Margin="0,0,0,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="3*" />
            </Grid.ColumnDefinitions>

            <!-- Balance box -->
            <Border Grid.Column="0" Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="16" Margin="0,0,12,0">
                <StackPanel>
                    <TextBlock Text="Saldo disponible" Foreground="#BDBDBD" FontSize="12" />
                    <TextBlock x:Name="UserBalanceText" Text="$0.00" Foreground="White" FontSize="26" FontWeight="Bold" Margin="0,8,0,0" />
                </StackPanel>
            </Border>

            <!-- Assets grid (two rows) -->
            <Border Grid.Column="1" Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="12">
                <StackPanel>
                    <TextBlock Text="Activos" Foreground="White" FontSize="14" FontWeight="SemiBold" />
                    <UniformGrid x:Name="AssetsGrid" Rows="2" Columns="3" Margin="0,12,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                        <!-- Items populated from code-behind via WelcomeWindow.PopulateDashboard (creates simple UIElements) -->
                    </UniformGrid>
                    <TextBlock x:Name="AssetsHint" Text="Mostrando activos principales" Foreground="#AAAAAA" FontSize="11" Margin="0,10,0,0" />
                </StackPanel>
            </Border>
        </Grid>

        <!-- 3) Positions list -->
        <Border Grid.Row="2" Background="#0F1313" BorderBrush="#222" BorderThickness="1" CornerRadius="10" Padding="12">
            <StackPanel>
                <DockPanel>
                    <TextBlock Text="Posiciones abiertas" Foreground="White" FontSize="16" FontWeight="SemiBold" DockPanel.Dock="Left" />
                    <TextBlock x:Name="OpenPositionsCountText" Text="Posiciones: 0" Foreground="#BDBDBD" FontSize="12" HorizontalAlignment="Right" DockPanel.Dock="Right" />
                </DockPanel>

                <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="0,10,0,0">
                    <StackPanel x:Name="PositionsStack" />
                </ScrollViewer>

                <TextBlock x:Name="PositionsEmptyText" Text="No hay posiciones abiertas" Foreground="#AAAAAA" FontSize="12" HorizontalAlignment="Center" Visibility="Collapsed" Margin="0,12,0,0" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>