<UserControl x:Class="TradePro.Views.MarketCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="320">
    <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" Padding="12" Margin="6" CornerRadius="8" MinWidth="260" MinHeight="110" Cursor="Hand">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Symbol}" Foreground="#BFBFBF" FontSize="16" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center" />

                <Border Grid.Column="1" CornerRadius="6" Padding="6" VerticalAlignment="Center">
                    <TextBlock x:Name="ChangeText" Text="{Binding ChangeString}" Foreground="#08120B" FontSize="12" FontWeight="Bold" />
                </Border>
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,8,0,0">
                <TextBlock Text="{Binding Price, StringFormat=C}" Foreground="White" FontSize="18" FontWeight="SemiBold" />
                <TextBlock Text="{Binding ChangeString}" Foreground="#BDBDBD" FontSize="12" />
            </StackPanel>
        </Grid>
    </Border>

    <UserControl.Resources>
        <Style TargetType="Border">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsUp}" Value="True">
                    <Setter Property="Background" Value="#0F1313" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="UserControl.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- set ChangeText background color based on IsUp in code-behind via binding workaround -->
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </UserControl.Triggers>
</UserControl>