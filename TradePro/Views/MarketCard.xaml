<UserControl x:Class="TradePro.Views.MarketCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="Auto" Width="260">
    <Border Background="#0F1313" BorderBrush="#222" BorderThickness="1" Padding="12" Margin="6" CornerRadius="8" MinWidth="200" MinHeight="96" Cursor="Hand">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="{Binding Symbol}" Foreground="#BFBFBF" FontSize="14" FontWeight="Bold" Grid.Column="0" VerticalAlignment="Center" />
                <TextBlock Text="?" Foreground="#2ecc71" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right" />
            </Grid>

            <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,8,0,0">
                <TextBlock Text="{Binding Price, StringFormat=C}" Foreground="White" FontSize="14" />
                <TextBlock Text="{Binding ChangeString}" Foreground="Green" FontSize="12" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>