<UserControl x:Class="TradePro.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#0E0F10">
        <StackPanel Margin="24">
            <TextBlock Text="Profile" Foreground="White" FontSize="22" FontWeight="Bold" />
            <TextBlock Text="Configuracion del perfil" Foreground="#BDBDBD" Margin="0,6,0,12" />

            <Border Background="#0F1313" CornerRadius="8" Padding="12">
                <StackPanel>
                    <TextBlock>
                        <Run Text="Usuario: " Foreground="#BDBDBD" />
                        <Run x:Name="UsernameText" Text="admin" Foreground="White" FontWeight="SemiBold" />
                    </TextBlock>
                    <TextBlock Margin="0,6,0,0">
                        <Run Text="Balance: " Foreground="#BDBDBD" />
                        <Run x:Name="BalanceText" Text="$0.00" Foreground="White" FontWeight="SemiBold" />
                    </TextBlock>

                    <Separator Margin="0,12,0,12" />

                    <TextBlock Text="Posiciones" Foreground="#BDBDBD" FontWeight="SemiBold" />
                    <ListBox x:Name="PositionsListBox" Background="Transparent" BorderThickness="0" Foreground="White" Margin="0,6,0,0" />

                    <TextBlock Text="Operaciones recientes" Foreground="#BDBDBD" FontWeight="SemiBold" Margin="0,12,0,0" />
                    <ListBox x:Name="TradesListBox" Background="Transparent" BorderThickness="0" Foreground="White" Margin="0,6,0,0" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>