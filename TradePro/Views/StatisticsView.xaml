<UserControl x:Class="TradePro.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#0E0F10">
        <StackPanel Margin="24">
            <TextBlock Text="Estadisticas" Foreground="White" FontSize="22" FontWeight="Bold" />
            <TextBlock Text="Resumen del rendimiento del usuario" Foreground="#BDBDBD" Margin="0,6,0,12" />

            <!-- Cards -->
            <WrapPanel x:Name="CardsPanel" ItemHeight="110" ItemWidth="240" Orientation="Horizontal" Margin="0,0,0,12">
                <!-- Cards populated from code-behind -->
            </WrapPanel>

            <!-- Lower section: quick chart placeholder + recent trades -->
            <Grid Margin="0,8,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="#0F1313" CornerRadius="8" Padding="12" Margin="0,0,12,0">
                    <StackPanel>
                        <TextBlock Text="PnL diario" Foreground="#BDBDBD" Margin="0,0,0,8" />
                        <TextBlock x:Name="DailyPnlText" Text="-" Foreground="White" FontSize="18" FontWeight="Bold" />
                        <TextBlock Text="(Realizado en el dia)" Foreground="#A9A9A9" FontSize="12" />
                        
                        <!-- small sparkline placeholder -->
                        <Rectangle Height="64" Fill="#0B0C0D" RadiusX="4" RadiusY="4" Margin="0,8,0,0" />
                    </StackPanel>
                </Border>

                <Border Grid.Column="1" Background="#0F1313" CornerRadius="8" Padding="12">
                    <StackPanel>
                        <TextBlock Text="Operaciones recientes" Foreground="#BDBDBD" Margin="0,0,0,8" />
                        <ListBox x:Name="RecentTradesList" Background="Transparent" BorderThickness="0" HorizontalContentAlignment="Stretch" />
                    </StackPanel>
                </Border>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>