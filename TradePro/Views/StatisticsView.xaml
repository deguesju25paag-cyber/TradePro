<UserControl x:Class="TradePro.Views.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Background="#0E0F10">
        <StackPanel Margin="24">
            <TextBlock Text="Statistics" Foreground="White" FontSize="22" FontWeight="Bold" />
            <TextBlock Text="Estadisticas de rendimiento" Foreground="#BDBDBD" Margin="0,6,0,12" />

            <Border Background="#0F1313" CornerRadius="8" Padding="12">
                <StackPanel>
                    <TextBlock Text="Overview" Foreground="#BDBDBD" />
                    <TextBlock Text="Total Trades: 123" Foreground="#BDBDBD" />
                    <TextBlock Text="Win Rate: 62%" Foreground="#BDBDBD" />
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</UserControl>