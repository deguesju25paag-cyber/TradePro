<Window x:Class="TradePro.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TradePro.Views"
        Title="Bienvenido" Background="#0E0F10" WindowState="Maximized" WindowStyle="None" ResizeMode="NoResize">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="64" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top bar component -->
        <views:TopBar x:Name="TopBarControl" Grid.Row="0" />

        <!-- Main content area (views injected here) -->
        <ContentControl x:Name="MainContent" Grid.Row="1" />
    </Grid>
</Window>